{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "packages/ui/next.config.js", "use": "@vercel/next" },
    { "src": "packages/api/src/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "packages/api/src/index.ts" },
    { "src": "/(.*)", "dest": "packages/ui/$1" }
  ]
}
